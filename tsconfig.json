{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "DOM",
      "ES2019"
    ],
    "types": [
      "node",
      "jest"
    ],
    "module": "commonjs",
    "outDir": "./lib",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": false,
    "noUnusedLocals": true,
    "declaration": true,
